<div class="container mt-4">
  <h1>Your Journals</h1>
  <% if @journals.any? %>
    <div class="list-group">
      <% @journals.each do |journal| %>
        <%= link_to partnership_journal_path(journal.partnership, journal), class: "list-group-item list-group-item-action flex-column align-items-start" do %>
          <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1"><%= journal.challenge.topic.name %></h5>
            <small><%= time_ago_in_words(journal.created_at) %> ago</small>
          </div>
          <p class="mb-1"><%= truncate(journal.content, length: 150) %></p>
          <% if journal.feedback.present? %>
            <small class="text-success">Feedback received</small>
          <% else %>
            <small class="text-warning">Waiting for the feedback</small>
          <% end %>
        <% end %>
      <% end %>
    </div>
    <% else %>
    <p class="mt-3">You don't have any journal entries yet. Start a <a href="#">challenge</a> to create one!</p>
    <% end %>
</div>
