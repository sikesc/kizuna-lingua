<div class="landing">
  <!-- Hero Section -->
  <section class="landing-hero">
    <div class="landing-hero__content">
      <div class="landing-hero__badge">
        <i class="fas fa-globe-americas"></i>
        <%= t('landing.badge') %>
      </div>
      <h1 class="landing-hero__title">
        <%= t('landing.title_line1') %><br>
        <span class="landing-hero__highlight"><%= t('landing.title_line2') %></span>
      </h1>
      <p class="landing-hero__subtitle">
        <%= t('landing.subtitle') %>
      </p>
      <div class="landing-hero__actions">
        <%= link_to new_user_registration_path, class: "landing-cta landing-cta--primary" do %>
          <i class="fas fa-rocket"></i>
          <%= t('landing.get_started') %>
        <% end %>
        <%= link_to new_user_session_path, class: "landing-cta landing-cta--secondary" do %>
          <i class="fas fa-sign-in-alt"></i>
          <%= t('landing.log_in') %>
        <% end %>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="landing-features">
    <div class="landing-features__header">
      <h2 class="landing-features__title"><%= t('landing.how_it_works.title') %></h2>
      <p class="landing-features__subtitle"><%= t('landing.how_it_works.subtitle') %></p>
    </div>

    <div class="landing-features__grid">
      <div class="feature-card">
        <div class="feature-card__icon feature-card__icon--coral">
          <i class="fas fa-book"></i>
        </div>
        <h3 class="feature-card__title"><%= t('landing.features.write_journals.title') %></h3>
        <p class="feature-card__text"><%= t('landing.features.write_journals.description') %></p>
      </div>

      <div class="feature-card">
        <div class="feature-card__icon feature-card__icon--teal">
          <i class="fas fa-comments"></i>
        </div>
        <h3 class="feature-card__title"><%= t('landing.features.give_feedback.title') %></h3>
        <p class="feature-card__text"><%= t('landing.features.give_feedback.description') %></p>
      </div>

      <div class="feature-card">
        <div class="feature-card__icon feature-card__icon--gold">
          <i class="fas fa-microphone"></i>
        </div>
        <h3 class="feature-card__title"><%= t('landing.features.have_conversations.title') %></h3>
        <p class="feature-card__text"><%= t('landing.features.have_conversations.description') %></p>
      </div>
    </div>
  </section>

  <!-- Partnership Section -->
  <section class="landing-partnership">
    <div class="landing-partnership__content">
      <div class="landing-partnership__icon">
        <i class="fas fa-handshake"></i>
      </div>
      <h2 class="landing-partnership__title"><%= t('landing.partnership.title') %></h2>
      <p class="landing-partnership__text">
        <%= t('landing.partnership.description') %>
      </p>
      <div class="landing-partnership__stats">
        <div class="stat-item">
          <span class="stat-item__number">2x</span>
          <span class="stat-item__label"><%= t('landing.partnership.stats.motivation') %></span>
        </div>
        <div class="stat-item">
          <span class="stat-item__number">100%</span>
          <span class="stat-item__label"><%= t('landing.partnership.stats.real_practice') %></span>
        </div>
        <div class="stat-item">
          <span class="stat-item__number">1</span>
          <span class="stat-item__label"><%= t('landing.partnership.stats.partner_needed') %></span>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="landing-cta-section">
    <h2 class="landing-cta-section__title"><%= t('landing.cta.title') %></h2>
    <p class="landing-cta-section__text"><%= t('landing.cta.subtitle') %></p>
    <%= link_to new_user_registration_path, class: "landing-cta landing-cta--primary landing-cta--large" do %>
      <i class="fas fa-user-plus"></i>
      <%= t('landing.cta.create_account') %>
    <% end %>
  </section>
</div>
