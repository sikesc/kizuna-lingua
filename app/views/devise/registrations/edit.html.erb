<h2><%= t('auth.edit.title', resource: resource_name.to_s.humanize) %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p><%= t('auth.edit.waiting_confirmation', email: resource.unconfirmed_email) %></p>
    <% end %>

    <%= f.input :password,
                hint: t('auth.edit.password_blank_hint'),
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :current_password,
                hint: t('auth.edit.current_password_hint'),
                required: true,
                input_html: { autocomplete: "current-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('common.update') %>
  </div>
<% end %>

<h3><%= t('auth.edit.cancel_account') %></h3>

<div><%= t('auth.edit.unhappy') %> <%= button_to t('auth.edit.cancel_account'), registration_path(resource_name), data: { confirm: t('auth.edit.confirm_cancel'), turbo_confirm: t('auth.edit.confirm_cancel') }, method: :delete %></div>

<%= link_to t('common.back'), :back %>
