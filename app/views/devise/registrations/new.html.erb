<div class="auth-page">
  <div class="auth-card">
    <div class="auth-card__header">
      <div class="auth-card__icon">
        <i class="fas fa-user-plus"></i>
      </div>
      <h1 class="auth-card__title"><%= t('auth.register.title') %></h1>
      <p class="auth-card__subtitle"><%= t('auth.register.subtitle') %></p>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "auth-form" }) do |f| %>
      <%= f.error_notification message: t('auth.register.fix_errors'), class: "auth-form__error-notification" %>

      <div class="auth-form__section">
        <h3 class="auth-form__section-title">
          <i class="fas fa-user"></i>
          <%= t('auth.register.account_details') %>
        </h3>
        <%= f.input :name,
                    required: true,
                    input_html: { autocomplete: "name", class: "auth-form__input" },
                    label_html: { class: "auth-form__label" },
                    wrapper_html: { class: "auth-form__group" } %>
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "auth-form__input" },
                    label_html: { class: "auth-form__label" },
                    wrapper_html: { class: "auth-form__group" } %>
        <%= f.input :password,
                    required: true,
                    hint: (@minimum_password_length ? t('auth.register.characters_minimum', count: @minimum_password_length) : nil),
                    input_html: { autocomplete: "new-password", class: "auth-form__input" },
                    label_html: { class: "auth-form__label" },
                    hint_html: { class: "auth-form__hint" },
                    wrapper_html: { class: "auth-form__group" } %>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password", class: "auth-form__input" },
                    label_html: { class: "auth-form__label" },
                    wrapper_html: { class: "auth-form__group" } %>
      </div>

      <div class="auth-form__section">
        <h3 class="auth-form__section-title">
          <i class="fas fa-language"></i>
          <%= t('auth.register.language_preferences') %>
        </h3>
        <%= f.input :native_language,
                    collection: [[t('languages.english'), 'english'], [t('languages.japanese'), 'japanese']],
                    required: true,
                    prompt: t('auth.register.native_language_prompt'),
                    input_html: { class: "auth-form__select" },
                    label_html: { class: "auth-form__label" },
                    wrapper_html: { class: "auth-form__group" } %>
        <%= f.input :learning_language,
                    collection: [[t('languages.english'), 'english'], [t('languages.japanese'), 'japanese']],
                    required: true,
                    prompt: t('auth.register.learning_language_prompt'),
                    input_html: { class: "auth-form__select" },
                    label_html: { class: "auth-form__label" },
                    wrapper_html: { class: "auth-form__group" } %>
        <%= f.input :learning_level,
                    collection: [[t('levels.beginner'), 'beginner'], [t('levels.intermediate'), 'intermediate'], [t('levels.advanced'), 'advanced']],
                    required: true,
                    prompt: t('auth.register.level_prompt'),
                    input_html: { class: "auth-form__select" },
                    label_html: { class: "auth-form__label" },
                    wrapper_html: { class: "auth-form__group" } %>
      </div>

      <div class="auth-form__section">
        <h3 class="auth-form__section-title">
          <i class="fas fa-camera"></i>
          <%= t('auth.register.profile_photo') %> <span class="auth-form__optional"><%= t('auth.register.optional') %></span>
        </h3>
        <%= f.input :photo,
                    as: :file,
                    label: false,
                    input_html: { class: "auth-form__file" },
                    wrapper_html: { class: "auth-form__group" } %>
      </div>

      <div class="auth-form__actions">
        <%= f.button :submit, t('auth.register.button'), class: "auth-form__submit" %>
      </div>
    <% end %>

    <div class="auth-card__footer">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
