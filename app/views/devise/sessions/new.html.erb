<div class="auth-page">
  <div class="auth-card auth-card--compact">
    <div class="auth-card__header">
      <div class="auth-card__icon auth-card__icon--teal">
        <i class="fas fa-sign-in-alt"></i>
      </div>
      <h1 class="auth-card__title"><%= t('auth.login.title') %></h1>
      <p class="auth-card__subtitle"><%= t('auth.login.subtitle') %></p>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "auth-form" }) do |f| %>
      <div class="auth-form__fields">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    placeholder: "Enter your email",
                    input_html: { autocomplete: "off", class: "auth-form__input" },
                    label_html: { class: "auth-form__label" },
                    wrapper_html: { class: "auth-form__group" } %>
        <%= f.input :password,
                    required: false,
                    placeholder: "Enter your password",
                    input_html: { autocomplete: "current-password", class: "auth-form__input" },
                    label_html: { class: "auth-form__label" },
                    wrapper_html: { class: "auth-form__group" } %>

        <% if devise_mapping.rememberable? %>
          <div class="auth-form__remember">
            <%= f.input :remember_me,
                        as: :boolean,
                        label: t('auth.login.remember_me'),
                        wrapper_html: { class: "auth-form__checkbox-group" },
                        input_html: { class: "auth-form__checkbox" },
                        label_html: { class: "auth-form__checkbox-label" } %>
          </div>
        <% end %>
      </div>

      <div class="auth-form__actions">
        <%= f.button :submit, t('auth.login.button'), class: "auth-form__submit auth-form__submit--teal" %>
      </div>
    <% end %>

    <div class="auth-card__footer">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
