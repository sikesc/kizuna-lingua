<% if count > 0 %>
  <span id="notification-badge" style="position: absolute; top: 30%; right: 40%; transform: translate(50%, -50%); min-width: 18px; height: 18px; padding: 0 4px; border-radius: 50%; background: #FF6B6B; color: white; font-size: 10px; font-weight: 600; line-height: 18px; text-align: center; box-shadow: 0 2px 4px rgba(255,107,107,0.4);"><%= count %></span>
<% else %>
  <span id="notification-badge"></span>
<% end %>
